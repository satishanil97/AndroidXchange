<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.satish.xchange.ReturnB">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup_return"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/t3_return"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="book"
            android:id="@+id/rb1_return"
            android:onClick="onRadioButtonClicked_returnB"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gadget"
            android:id="@+id/rb2_return"
            android:onClick="onRadioButtonClicked_returnB"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stationery"
            android:id="@+id/rb3_return"
            android:onClick="onRadioButtonClicked_returnB"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="others"
            android:id="@+id/rb4_return"
            android:checked="false"
            android:onClick="onRadioButtonClicked_returnB" />

    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lender&apos;s Name : "
        android:id="@+id/t2_return"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/radioGroup_return"
        android:layout_toLeftOf="@+id/et2_return"
        android:layout_toStartOf="@+id/et2_return" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et2_return"
        android:layout_alignTop="@+id/t2_return"
        android:layout_alignRight="@+id/et1_return"
        android:layout_alignEnd="@+id/et1_return"
        android:layout_toRightOf="@+id/radioGroup_return"
        android:layout_toEndOf="@+id/radioGroup_return" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Item Name : "
        android:id="@+id/t1_return"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Item Type : "
        android:id="@+id/t3_return"
        android:layout_below="@+id/et1_return"
        android:layout_alignRight="@+id/radioGroup_return"
        android:layout_alignEnd="@+id/radioGroup_return"
        android:layout_marginTop="29dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return"
        android:id="@+id/return_button"
        android:layout_below="@+id/et2_return"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et1_return"
        android:layout_alignTop="@+id/t1_return"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/t1_return"
        android:layout_toEndOf="@+id/t1_return" />



</RelativeLayout>
