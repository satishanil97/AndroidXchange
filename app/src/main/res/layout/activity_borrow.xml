<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.satish.xchange.Borrow">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup_borrow"
        android:layout_above="@+id/borrow_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="book"
            android:id="@+id/rb1_borrow"
            android:onClick="onRadioButtonClicked_borrow"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gadget"
            android:id="@+id/rb2_borrow"
            android:onClick="onRadioButtonClicked_borrow"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stationery"
            android:id="@+id/rb3_borrow"
            android:onClick="onRadioButtonClicked_borrow"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="others"
            android:id="@+id/rb4_borrow"
            android:checked="false"
            android:onClick="onRadioButtonClicked_borrow" />

    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lender&apos;s Name : "
        android:id="@+id/t1_borrow"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/t2_borrow"
        android:layout_toLeftOf="@+id/borrow_button"
        android:layout_toStartOf="@+id/borrow_button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et1_borrow"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/t1_borrow"
        android:layout_toRightOf="@+id/t1_borrow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Item Name : "
        android:id="@+id/t2_borrow"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/et1_borrow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et2_borrow"
        android:layout_alignTop="@+id/t2_borrow"
        android:layout_alignLeft="@+id/et1_borrow"
        android:layout_alignStart="@+id/et1_borrow"
        android:layout_alignRight="@+id/et1_borrow"
        android:layout_alignEnd="@+id/et1_borrow" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Item Type : "
        android:id="@+id/t3_borrow"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/radioGroup_borrow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borrow"
        android:id="@+id/borrow_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp" />


</RelativeLayout>
