<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.satish.xchange.Lend"
    android:id="@+id/lend_screen">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup_lend"
        android:layout_above="@+id/lend_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="book"
            android:id="@+id/rb1_lend"
            android:onClick="onRadioButtonClicked_lend"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gadget"
            android:id="@+id/rb2_lend"
            android:onClick="onRadioButtonClicked_lend"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stationery"
            android:id="@+id/rb3_lend"
            android:onClick="onRadioButtonClicked_lend"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="others"
            android:id="@+id/rb4_lend"
            android:checked="false"
            android:onClick="onRadioButtonClicked_lend" />

    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Borrower&apos;s Name : "
        android:id="@+id/t1_lend"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/et1_lend"
        android:layout_toLeftOf="@+id/lend_button"
        android:layout_toStartOf="@+id/lend_button" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et1_lend"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/t1_lend"
        android:layout_toEndOf="@+id/t1_lend" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Item Name : "
        android:id="@+id/t2_lend"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/et1_lend"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et2_lend"
        android:layout_alignTop="@+id/t2_lend"
        android:layout_alignLeft="@+id/et1_lend"
        android:layout_alignStart="@+id/et1_lend"
        android:layout_alignRight="@+id/et1_lend"
        android:layout_alignEnd="@+id/et1_lend" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Item Type : "
        android:id="@+id/t3_lend"
        android:layout_above="@+id/radioGroup_lend"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lend"
        android:id="@+id/lend_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show all"
        android:id="@+id/show_button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/lend_button"
        android:layout_alignStart="@+id/lend_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update"
        android:id="@+id/update_button"
        android:layout_above="@+id/lend_button"
        android:layout_alignRight="@+id/show_button"
        android:layout_alignEnd="@+id/show_button" />


</RelativeLayout>
