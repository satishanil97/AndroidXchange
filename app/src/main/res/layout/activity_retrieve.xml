<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.satish.xchange.Retrieve">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup_retrieve"
        android:layout_above="@+id/retrieve_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="book"
            android:id="@+id/rb1_retrieve"
            android:onClick="onRadioButtonClicked_retrieve"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gadget"
            android:id="@+id/rb2_retrieve"
            android:onClick="onRadioButtonClicked_retrieve"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="stationery"
            android:id="@+id/rb3_retrieve"
            android:onClick="onRadioButtonClicked_retrieve"
            android:checked="false" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="others"
            android:id="@+id/rb4_retrieve"
            android:checked="false"
            android:onClick="onRadioButtonClicked_retrieve" />

    </RadioGroup>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Borrower  : "
        android:id="@+id/t1_retrieve"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Item Type : "
        android:id="@+id/t3_retrieve"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retrieve"
        android:id="@+id/retrieve_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/et1_retrieve"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/t1_retrieve"
        android:layout_toEndOf="@+id/t1_retrieve" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Item Name :"
        android:id="@+id/t2_retrieve"
        android:layout_below="@+id/et1_retrieve"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="54dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et2_retrieve"
        android:layout_alignBottom="@+id/t2_retrieve"
        android:layout_alignRight="@+id/et1_retrieve"
        android:layout_alignEnd="@+id/et1_retrieve"
        android:layout_alignLeft="@+id/retrieve_button"
        android:layout_alignStart="@+id/retrieve_button" />


</RelativeLayout>
